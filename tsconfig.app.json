{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
      "composite": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "ignoreDeprecations": "5.0",
      "preserveValueImports": false,
      "importsNotUsedAsValues": "remove",
      "verbatimModuleSyntax": true,
    }
  }